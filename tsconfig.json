{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
"include": [
  "proto/compiled/**/*.ts", 
  "types/**/*.ts", 
  "utils/**/*.ts",
  "enums/**/*.ts",  
  "index.ts"],
  "exclude": ["node_modules", "dist"]
}